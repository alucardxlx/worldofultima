	IF !(<ARGN2> == dam_god)
		IF (<ARGN2> & dam_physical)
			LOCAL.DMG= {<FEVAL <SRC.TAG0.LDMG>> <FEVAL <SRC.TAG0.HDMG>>}
			LOCAL.PHYSICALDAMAGE=<FEVAL <FLOATVAL (<EVAL <LOCAL.DMG>> * (100 - <TAG.DAR>))/100>>
