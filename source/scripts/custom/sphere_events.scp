		ENDIF
		IF (<ACT.TDATA1> == 1)
			SRC.ADDCLILOC 1070722, <def.BFONT_white>Adds <EVAL <ACT.TDATA2>*60> hitpoints over 60 seconds.
		ENDIF
		IF (<ACT.TDATA1> == 2)
			SRC.ADDCLILOC 1070722, <def.BFONT_white>Adds <EVAL <ACT.TDATA2>*60> mana over 60 seconds.
		ENDIF
		RETURN 1
	ENDIF

